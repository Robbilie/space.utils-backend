FROM node:latest

# Create app directory
RUN mkdir -p /usr/src/app
WORKDIR /usr/src/app

# Install app dependencies
COPY package.json /usr/src/app/
RUN npm install
RUN npm update

# Bundle app source
COPY . /usr/src/app

EXPOSE 4001 4002 4003
CMD [ "npm", "start", "&&", "cat", "/usr/src/app/npm-debug.log" ]
